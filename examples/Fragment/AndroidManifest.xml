<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.tachesimazzoca.android.example.fragment"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.github.tachesimazzoca.android.example.fragment.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.github.tachesimazzoca.android.example.fragment.OnePaneActivity"
            android:label="@string/label_activity_one_pane"
            android:parentActivityName="com.github.tachesimazzoca.android.example.fragment.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.tachesimazzoca.android.example.fragment.MainActivity" />
        </activity>
        <activity
            android:name="com.github.tachesimazzoca.android.example.fragment.TwoPaneActivity"
            android:label="@string/label_activity_two_pane"
            android:parentActivityName="com.github.tachesimazzoca.android.example.fragment.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.tachesimazzoca.android.example.fragment.MainActivity" />
        </activity>
    </application>

</manifest>
