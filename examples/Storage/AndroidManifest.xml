<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.tachesimazzoca.android.example.storage"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.github.tachesimazzoca.android.example.storage.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.github.tachesimazzoca.android.example.storage.SettingsActivity"
            android:label="@string/title_settings"
            android:parentActivityName="com.github.tachesimazzoca.android.example.storage.MainActivity" >
        </activity>
        <activity
            android:name="com.github.tachesimazzoca.android.example.storage.MemoActivity"
            android:label="@string/title_memo"
            android:parentActivityName="com.github.tachesimazzoca.android.example.storage.MainActivity" >
        </activity>
        <activity
            android:name="com.github.tachesimazzoca.android.example.storage.DownloadsActivity"
            android:label="@string/title_downloads"
            android:parentActivityName="com.github.tachesimazzoca.android.example.storage.MainActivity" >
        </activity>
    </application>

</manifest>
