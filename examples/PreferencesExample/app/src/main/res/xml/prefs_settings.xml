<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:persistent="false"
        android:title="Updates">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_key_updates_check"
            android:summary="Check whether new feeds are available or not."
            android:title="Check for Updates" />
        <ListPreference
            android:defaultValue="0"
            android:dependency="pref_key_updates_check"
            android:entries="@array/check_interval_labels"
            android:entryValues="@array/check_interval_values"
            android:key="pref_key_updates_interval"
            android:summary="Set the periodical interval to check for updates."
            android:title="Check Interval" />
    </PreferenceCategory>
    <PreferenceCategory
        android:persistent="false"
        android:title="Account">
        <EditTextPreference
            android:key="pref_key_profile_email"
            android:summary="Set your e-mail address for this account."
            android:title="E-mail" />
        <Preference
            android:persistent="false"
            android:title="Profile">
            <intent
                android:action="@string/pref_settings_profile"
                android:targetClass="com.github.tachesimazzoca.android.example.preferences.SettingsActivity"
                android:targetPackage="com.github.tachesimazzoca.android.example.preferences" />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>